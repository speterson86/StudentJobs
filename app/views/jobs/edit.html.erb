<html>
  <header>
    <h1>Edit a job post</h1>
    <meta charset="utf=8">
    <%= stylesheet_link_tag "awesomejobs.css" %>
  </header>

  <%= form_for(@job) do |f| %>
  
  <% if @job.errors.any? %>
  <div id="error-text">
    <h2><%= pluralize(@job.errors.count, "error") %> prohibited this job from being saved:</h2>
    <ul>
      <% @job.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
  <% end %>

 <p>
    <h7><%= f.label :Company_Name %></h7><br>
   <%= f.text_field :company_name, value: @job.company_name %>
  </p>

  <p>
    <h7><%= f.label :Job_Title %></h7><br>
    <%= f.text_field :title, value: @job.title %>
  </p>

  <p>
    <h7><%= f.label :Job_Duties %></h7><br>
    <%= f.text_area :duties, value: @job.duties %>
  </p>

  <p>
    <h7><%= f.label :Job_Description %></h7><br>
    <%= f.text_area :desc, value: @job.desc %>
   </p>

  <p>
    <h7><%= f.label :Skills %></h7><br>
    <%= f.text_field :skills, value: @job.skills %>
  </p>

  <p>
    <h7><%= f.label :Shift %></h7><br>
    <%= f.text_field :shift, value: @job.shift %>
  </p>

  <p>
    <h7><%= f.label :Hours_Per_Week %></h7><br>
    <%= f.text_field :hours_per_week, value: @job.hours_per_week %>
  </p>

  <p>
    <h7><%= f.label :Hourly_Pay %></h7><br>
    <%= f.text_field :hourly_pay, value: @job.hourly_pay %>
  </p>

  <p>
    <h7><%= f.label :company_website %></h7><br>
    <%= f.text_field :company_website, value: @job.company_website %>
  </p>

  <p>
    <h7><%= f.label :email %></h7><br>
     <%= f.text_field :email, value: @job.email %>
  </p>

  <p>
    <h7>Accept Job?</h7>
  <p>

  <%= f.radio_button :approve, true, :checked => true %><!--auto generated id = "approve_true"-->
  <%= f.label :yes %><br />
  <%= f.radio_button :approve, false %><!--auto generated id = "reject_true"-->
  <%= f.label :no %>  

  <!--WHEN A RADIO BUTTON IS SELECTED, DO ONE OF THE FOLLOWING UPON CLICK OF THE "OK" BUTTON:-->
  <!--if radio button "yes" is selected, set the boolean show flag to 2, and add the job to the list in index.html.erb

-->
  <!--else-if radio button "no" is selected, leave the default boolean show flag, and do not add the job to index.html.rb-->
  <p>
    <h7>Reason for Rejecting:</h7><br>
    <%= f.text_area :reject_description %>  <!--if null, give the admin an error message.-->
  </p>

  <p>
    <%= f.submit %>
  </p>

<% end %>

<%= link_to 'Back', jobs_path %>

</html>