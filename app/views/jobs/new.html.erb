<h1>Create a new job post</h1>
<%= form_for :post, url: jobs_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %><br>
  </p>

  <p>
    <%= f.label :duties %><br>
    <%= f.text_area :duties %><br>
  </p>

  <p>
    <%= f.label :hourly_pay %><br>
    <%= f.text_field :hourly_pay %><br>
  </p>

  <p>
    <%= f.label :company_name %><br>
    <%= f.text_field :company_name %><br>
  </p>

  <p>
    <%= f.label :skills %><br>
    <%= f.text_area :skills %><br>
  </p>

  <p>
    <%= f.label :desc %><br>
    <%= f.text_area :desc%><br>
  </p>

  <p>
    <%= f.label :hours_per_week %><br>
    <%= f.text_field :hours_per_week %><br>
  </p>

  <p>
    <%= f.label :shift %><br>
    <%= f.text_field :shift %><br>
  </p>

  <p>
    <%= f.label :contact_info %><br>
    <%= f.text_field :contact_info %><br>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>