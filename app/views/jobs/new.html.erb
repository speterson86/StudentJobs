<h1>Create a new job post</h1>

<%= form_for :post, url: jobs_path do |f| %>
  <p>
    <%= f.label :Job_Title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :Job_Duties %><br>
    <%= f.text_area :duties %>
  </p>

  <p>
    <%= f.label :Hourly_Pay %><br>
    <%= f.text_field :hourly_pay %>
  </p>

  <p>
    <%= f.label :Company_Name %><br>
    <%= f.text_field :company_name %>
  </p>

  <p>
    <%= f.label :Skills %><br>
    <%= f.text_field :skills %>
  </p>

  <p>
    <%= f.label :Job_Description %><br>
    <%= f.text_area :desc %>
  </p>

  <p>
    <%= f.label :Hours_Per_Week %><br>
    <%= f.text_field :hours_per_week %>
  </p>

  <p>
    <%= f.label :Shift %><br>
    <%= f.text_field :shift %>
  </p>

  <p>
    <%= f.label :Contact_URL %><br>
    <%= f.text_field :contact_info %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', jobs_index_path %>
